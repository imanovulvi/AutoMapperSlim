<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>AutoMapperSlim</PackageId>
    <Title>AutoMapperSlim</Title>
    <Version>1.0.0</Version>
    <Company>Imanov Ulvi</Company>
    <Copyright>Copyright 2025</Copyright>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/imanovulvi/AutoMapperSlim.git</RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
    <PackageTags>AutoMapper Map Slim</PackageTags>
    <NeutralLanguage>az</NeutralLanguage>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\..\..\Downloads\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.4" />
  </ItemGroup>

</Project>
